{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "commitMessageTopic": "{{depName}} ({{datasource}})",
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "extends": [
    "config:recommended",
    ":maintainLockFilesWeekly",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":semanticCommitScope(deps)",
    "docker:enableMajor",
    "docker:pinDigests",
    ":prConcurrentLimitNone",
    ":pinDevDependencies",
    ":prHourlyLimitNone",
    "helpers:pinGitHubActionDigests",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "internalChecksFilter": "strict",
  "lockFileMaintenance": {
    "automerge": true
  },
  "packageRules": [
    {
      "automerge": true,
      "description": "Automatically merges minor and patch-level updates",
      "matchUpdateTypes": ["minor", "patch", "digest", "pin", "pinDigest"]
    },
    {
      "description": "v prefix workaround for action updates with 1 component",
      "extractVersion": "^(?<version>v?\\d+)$",
      "matchDepTypes": ["action"],
      "versioning": "regex:^v?(?<major>\\d+)(\\.(?<minor>\\d+)\\.(?<patch>\\d+))?$"
    },
    {
      "description": "v prefix workaround for action updates with 2 components",
      "extractVersion": "^(?<version>v?\\d+\\.\\d+)$",
      "matchDepTypes": ["action"],
      "versioning": "regex:^v?(?<major>\\d+)(\\.(?<minor>\\d+)\\.(?<patch>\\d+))?$"
    },
    {
      "description": "v prefix workaround for action updates with 3 components",
      "extractVersion": "^(?<version>v?\\d+\\.\\d+\\.\\d+)$",
      "matchDepTypes": ["action"],
      "versioning": "regex:^v?(?<major>\\d+)(\\.(?<minor>\\d+)\\.(?<patch>\\d+))?$"
    },
    {
      "automerge": false,
      "description": "Automatically creates a PR whenever there is a new major Renovate version",
      "matchUpdateTypes": ["major"]
    }
  ],
  "platformAutomerge": true,
  "rangeStrategy": "bump",
  "rollbackPrs": true
}
